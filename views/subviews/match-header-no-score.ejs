<div class="d-flex flex-column">
        
        <% if (match.status === "in progress") { %>
        <div>
                <small>
                        Em andamento
                </small>
        </div>
        <% } %>

        <div class="match-header-box container-fluid d-flex justify-content-between align-items-center align-self-center border-bottom rounded p-1">
                <div class="match-header-flag border border-dark">
                        <img src="<%= match.team1.flag %>" class="img-fluid">
                </div>
                <div class="match-header-name pl-3"><%= match.team1.name %></div>
                <div class="pl-1 pr-1">x</div>
                <div class="match-header-name pr-3"><%= match.team2.name %></div>
                <div class="match-header-flag border border-dark">
                        <img src="<%= match.team2.flag %>" class="img-fluid">
                </div>
        </div>
</div>
